# Application environment variables
APP_NAME=Crypto Portfolio Tracker
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/crypto_portfolio
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# JWT & Security (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-at-least-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_TIMEOUT_MINUTES=30
MAX_SESSION_TTL_HOURS=24

# Encryption (for API key storage, 32 bytes hex-encoded for AES-256)
ENCRYPTION_MASTER_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Email
SENDGRID_API_KEY=
EMAIL_FROM=noreply@defiers.io

# Market Data APIs
COINGECKO_API_KEY=
MARKET_PRICE_CACHE_TTL=60

# AWS S3 (for backups)
S3_BUCKET=crypto-portfolio-backups
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# IP Geolocation
GEOIP2_DB_PATH=

# Logging
LOG_LEVEL=INFO
